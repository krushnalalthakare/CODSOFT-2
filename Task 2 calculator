print(" Calculator")

a = float(input("first no: "))
b = float(input("second no: "))

print("Choose an operation (+, -, *, /)")
op = input("Operation: ")

if op == "+":
    print("Result:", a + b)
elif op == "-":
    print("Result:", a - b)
elif op == "*":
    print("Result:", a * b)
elif op == "/":
    if b != 0:
        print("Result:", a / b)
    else:
        print("Cannot divide by zero.")
else:
    print("Invalid operation.")
